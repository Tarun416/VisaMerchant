<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:id="@+id/RegistrationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="26dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:layout_below="@+id/RegistrationTitle"
        android:layout_marginTop="25dp"
        android:textSize="17dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/fullnameedit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fullname"
        android:layout_marginLeft="24dp"
        android:layout_alignBaseline="@+id/fullname"
        android:hint="Enter your full Name"/>






    <TextView
        android:id="@+id/BusinessId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Id"
        android:layout_below="@+id/fullname"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/businessnameedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/BusinessId"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/BusinessId"
        android:text="MP"
        android:textStyle="bold"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/ContactNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No"
        android:layout_below="@+id/BusinessId"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textStyle="bold"

        />


    <EditText
        android:id="@+id/contactnameedit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ContactNo"
        android:layout_marginLeft="18dp"
        android:layout_alignBaseline="@+id/ContactNo"
        android:hint="Enter your Contact No"/>


    <TextView
        android:id="@+id/AccountNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account No"
        android:layout_below="@+id/ContactNo"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textStyle="bold"

        />


    <EditText
        android:id="@+id/accountnameedit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/AccountNo"
        android:layout_marginLeft="16dp"
        android:layout_alignBaseline="@+id/AccountNo"
        android:hint="Enter your Account No"/>



    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AccountNo"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="REGISTER"/>




</RelativeLayout>
